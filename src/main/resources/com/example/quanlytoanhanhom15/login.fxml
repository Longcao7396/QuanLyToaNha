<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.quanlytoanhanhom15.LoginController"
            prefWidth="400" prefHeight="300"
            style="-fx-background-color: linear-gradient(to bottom right, #7FB3D5, #2874A6);">

    <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="40" AnchorPane.bottomAnchor="40"
          AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">

        <Label text="Đăng nhập hệ thống" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextField fx:id="usernameField" promptText="Tên đăng nhập" maxWidth="250"/>
        <PasswordField fx:id="passwordField" promptText="Mật khẩu" maxWidth="250"/>

        <Button text="Đăng nhập" prefWidth="120" onAction="#handleLogin"/>

        <Label fx:id="statusLabel" textFill="red" style="-fx-font-size: 13px;"/>
    </VBox>

</AnchorPane>
