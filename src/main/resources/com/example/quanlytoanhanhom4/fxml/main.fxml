<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="640.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quanlytoanhanhom4.controller.MainController">
   <top>
      <HBox fx:id="topBar" alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2874A6; -fx-padding: 18;" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER_LEFT" spacing="6.0">
               <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="PHẦN MỀM QUẢN LÝ TOÀ NHÀ" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER_RIGHT" spacing="6.0">
               <Label fx:id="adminLabel" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="CHÀO ADMIN" />
               <Label style="-fx-text-fill: #E8F6FF; -fx-font-size: 12px;" text="Sẵn sàng hỗ trợ bạn 24/7" />
            </VBox>
            <Button mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 20;" text="Đăng xuất" />
         </children>
      </HBox>
   </top>
   <left>
      <VBox alignment="TOP_LEFT" spacing="12.0" style="-fx-background-color: #1E2735; -fx-padding: 24;" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-text-fill: #9FB3C8; -fx-font-size: 12px; -fx-font-weight: bold;" text="DANH MỤC CHÍNH" />
             <Label style="-fx-text-fill: #9FB3C8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"
                    text="QUẢN LÝ CƯ DÂN &amp; CĂN HỘ"/>
             <Button mnemonicParsing="false" onAction="#handleResident" prefHeight="40.0" prefWidth="180.0"
                     style="-fx-background-color: #334055; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 18; -fx-background-radius: 10;"
                     text="Quản lý cư dân"/>
             <Button mnemonicParsing="false" onAction="#handleApartment" prefHeight="40.0" prefWidth="180.0"
                     style="-fx-background-color: #334055; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 18; -fx-background-radius: 10;"
                     text="Quản lý căn hộ"/>
             <Label style="-fx-text-fill: #9FB3C8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"
                    text="TÀI CHÍNH &amp; DỊCH VỤ"/>
             <Button mnemonicParsing="false" onAction="#handleServiceFee" prefHeight="40.0" prefWidth="180.0"
                     style="-fx-background-color: #334055; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 18; -fx-background-radius: 10;"
                     text="Phí Dịch vụ &amp; Điện Nước"/>
             <Button mnemonicParsing="false" onAction="#handleInvoice" prefHeight="40.0" prefWidth="180.0"
                     style="-fx-background-color: #334055; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 18; -fx-background-radius: 10;"
                     text="Hóa đơn &amp; Thanh toán"/>
             <Label style="-fx-text-fill: #9FB3C8; -fx-font-size: 12px; -fx-font-weight: bold; -fx-padding: 10 0 0 0;"
                    text="THÔNG BÁO &amp; YÊU CẦU"/>
             <Button mnemonicParsing="false" onAction="#handleNotification" prefHeight="40.0" prefWidth="180.0"
                     style="-fx-background-color: #334055; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 18; -fx-background-radius: 10;"
                     text="Gửi thông báo"/>
             <Button mnemonicParsing="false" onAction="#handleTicket" prefHeight="40.0" prefWidth="180.0"
                     style="-fx-background-color: #334055; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 18; -fx-background-radius: 10;"
                     text="Yêu cầu &amp; Sự cố"/>
         </children>
      </VBox>
   </left>
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="mainContentVBox" alignment="TOP_CENTER" spacing="0.0" style="-fx-padding: 0; -fx-background-color: linear-gradient(to bottom right, #F7FAFF, #E5ECF6);">
               <!-- Dashboard Charts sẽ được thêm vào đây từ MainController -->
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
