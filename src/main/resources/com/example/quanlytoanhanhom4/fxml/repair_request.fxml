<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.quanlytoanhanhom4.controller.TicketController">
    <center>
        <VBox spacing="10" style="-fx-padding: 15;">
            <children>
                <TableView fx:id="repairTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="colTitle" text="Tiêu đề" prefWidth="200"/>
                        <TableColumn fx:id="colRepairType" text="Loại sửa chữa" prefWidth="150"/>
                        <TableColumn fx:id="colPriority" text="Ưu tiên" prefWidth="100"/>
                        <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="120"/>
                    </columns>
                </TableView>
                <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>
            </children>
        </VBox>
    </center>
    <right>
        <ScrollPane fitToWidth="true">
            <VBox spacing="10" style="-fx-padding: 15; -fx-min-width: 300;">
                <children>
                    <Label text="Thông tin yêu cầu sửa chữa" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="Căn hộ:"/>
                    <ComboBox fx:id="apartmentIdCombo" prefWidth="250"/>
                    <Label text="Cư dân:"/>
                    <ComboBox fx:id="residentIdCombo" prefWidth="250"/>
                    <Label text="Tiêu đề:"/>
                    <TextField fx:id="titleField" prefWidth="250"/>
                    <Label text="Mô tả:"/>
                    <TextArea fx:id="descriptionArea" prefWidth="250" prefHeight="80"/>
                    <Label text="Loại sửa chữa:"/>
                    <ComboBox fx:id="repairTypeCombo" prefWidth="250"/>
                    <Label text="Ưu tiên:"/>
                    <ComboBox fx:id="priorityCombo" prefWidth="250"/>
                    <Label text="Trạng thái:"/>
                    <ComboBox fx:id="statusCombo" prefWidth="250"/>
                    <Label text="Ngày yêu cầu:"/>
                    <DatePicker fx:id="requestedDatePicker" prefWidth="250"/>
                    <Label text="Ngày lên lịch:"/>
                    <DatePicker fx:id="scheduledDatePicker" prefWidth="250"/>
                    <Label text="Ngày hoàn thành:"/>
                    <DatePicker fx:id="completedDatePicker" prefWidth="250"/>
                    <Label text="Chi phí dự kiến (VNĐ):"/>
                    <TextField fx:id="estimatedCostField" prefWidth="250"/>
                    <Label text="Chi phí thực tế (VNĐ):"/>
                    <TextField fx:id="actualCostField" prefWidth="250"/>
                    <Label text="Ghi chú:"/>
                    <TextArea fx:id="notesArea" prefWidth="250" prefHeight="60"/>
                    <HBox spacing="10">
                        <children>
                            <Button fx:id="addButton" text="Thêm" onAction="#handleAdd"
                                    style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-pref-width: 80;"/>
                            <Button fx:id="updateButton" text="Cập nhật" onAction="#handleUpdate" disable="true"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 80;"/>
                        </children>
                    </HBox>
                    <Button fx:id="deleteButton" text="Xóa" onAction="#handleDelete" disable="true"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-pref-width: 250;"/>
                </children>
            </VBox>
        </ScrollPane>
    </right>
</BorderPane>


